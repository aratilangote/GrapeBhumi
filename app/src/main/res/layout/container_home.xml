<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="vertical"
    tools:context=".ContainerHome"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginBottom="50dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:elevation="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="5dp">
            <AdapterViewFlipper
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:id="@+id/adptflipper"
                android:flipInterval="2000"
                android:layout_gravity="top" />
        </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:padding="10dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/teal_700">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="20sp"
                android:text="@string/requirement_title"
                android:textColor="@color/white"
                android:fontFamily="@font/font_regular"
                android:layout_marginStart="10dp"
                android:layout_marginVertical="5dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="220dp"
                android:background="@drawable/homeimg"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:padding="10dp"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/teal_700">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textSize="20sp"
                    android:text="@string/disease_title"
                    android:textColor="@color/white"
                    android:fontFamily="@font/font_regular"
                    android:layout_marginStart="10dp"
                    android:layout_marginVertical="5dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/layout1"
                        android:background="@color/white">
                        <androidx.cardview.widget.CardView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            app:cardCornerRadius="10dp"
                            android:id="@+id/info1"
                            android:layout_margin="10dp">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/blackrot" />
                        </androidx.cardview.widget.CardView>

                        <Button
                            android:id="@+id/info_txt1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_toEndOf="@id/info1"
                            android:fontFamily="@font/font_regular"
                            android:gravity="center"
                            android:text="@string/disease_blackrot"
                            android:textColor="@color/teal_700"
                            android:textSize="25sp"
                            android:background="@color/white"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/layout2"
                        android:background="@color/grey">
                        <androidx.cardview.widget.CardView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            app:cardCornerRadius="10dp"
                            android:id="@+id/info2"
                            android:layout_margin="10dp">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/downy" />
                        </androidx.cardview.widget.CardView>

                        <Button
                            android:id="@+id/info_txt2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_toEndOf="@id/info2"
                            android:fontFamily="@font/font_regular"
                            android:gravity="center"
                            android:text="@string/disease_downey"
                            android:textColor="@color/black"
                            android:textSize="25sp"
                            android:background="@color/grey"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/layout3"
                        android:background="@color/white">
                        <androidx.cardview.widget.CardView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            app:cardCornerRadius="10dp"
                            android:id="@+id/info3"
                            android:layout_margin="10dp">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/esca" />
                        </androidx.cardview.widget.CardView>

                        <Button
                            android:id="@+id/info_txt3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_toEndOf="@id/info3"
                            android:fontFamily="@font/font_regular"
                            android:gravity="center"
                            android:text="@string/disease_esca"
                            android:textColor="@color/teal_700"
                            android:textSize="25sp"
                            android:background="@color/white"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/layout4"
                        android:background="@color/grey">
                        <androidx.cardview.widget.CardView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            app:cardCornerRadius="10dp"
                            android:id="@+id/info4"
                            android:layout_margin="10dp">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/leafblight" />
                        </androidx.cardview.widget.CardView>
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/info_txt4"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:text="@string/disease_leafblight"
                            android:textSize="25sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/font_regular"
                            android:layout_toEndOf="@id/info4"
                            android:background="@color/grey"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/layout5"
                        android:background="@color/white">
                        <androidx.cardview.widget.CardView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            app:cardCornerRadius="10dp"
                            android:id="@+id/info5"
                            android:layout_margin="10dp">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/powdery" />
                        </androidx.cardview.widget.CardView>
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/info_txt5"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:text="@string/disease_powdery"
                            android:textSize="25sp"
                            android:textColor="@color/teal_700"
                            android:fontFamily="@font/font_regular"
                            android:layout_toEndOf="@id/info5"
                            android:background="@color/white"/>
                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</ScrollView>