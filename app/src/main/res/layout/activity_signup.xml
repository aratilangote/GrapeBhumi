<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".SignupActivity">

    <ImageView
        android:id="@+id/display_pic1"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/grape_farmer"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/display_txt1"
        android:layout_below="@+id/display_pic1"
        android:text="@string/signup_welcome"
        android:textStyle="bold"
        android:fontFamily="@font/font_regular"
        android:textSize="30sp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        tools:ignore="UnknownId" />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nameLayoutId"
        android:layout_below="@id/display_txt1"
        android:layout_marginHorizontal="15dp"
        app:boxStrokeColor="@color/teal_700">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nameEditextId"
            android:autofillHints="name"
            android:fontFamily="@font/font_regular"
            android:hint="@string/signup_enter_name"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/phoneLayoutId"
        android:layout_marginHorizontal="15dp"
        style="@style/Widget.Design.TextInputLayout"
        app:boxStrokeColor="@color/teal_700"
        android:layout_below="@id/nameLayoutId">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/phoneEditTextId"
            android:fontFamily="@font/font_regular"
            android:hint="@string/signup_enter_phone"
            android:inputType="phone"
            android:textColor="@color/black"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
            android:autofillHints="phone" />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mailLayoutId"
        android:layout_marginHorizontal="15dp"
        style="@style/Widget.Design.TextInputLayout"
        app:boxStrokeColor="@color/teal_700"
        android:layout_below="@id/phoneLayoutId">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mailEditTextId"
            android:fontFamily="@font/font_regular"
            android:hint="@string/enter_mail"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
            android:autofillHints="emailAddress" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/passLayoutId"
        android:layout_marginHorizontal="15dp"
        app:passwordToggleEnabled="true"
        style="@style/Widget.Design.TextInputLayout"
        app:boxStrokeColor="@color/teal_700"
        android:layout_below="@id/mailLayoutId">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="password"
            android:id="@+id/passEditTextId"
            android:fontFamily="@font/font_regular"
            android:hint="@string/signup_enter_pass"
            android:inputType="textPassword"
            android:textColor="@color/black"
            tools:ignore="SpeakableTextPresentCheck" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/conPassLayoutId"
        android:layout_marginHorizontal="15dp"
        app:passwordToggleEnabled="true"
        style="@style/Widget.Design.TextInputLayout"
        app:boxStrokeColor="@color/teal_700"
        android:layout_below="@id/passLayoutId">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="password"
            android:id="@+id/confirmPassEditTextId"
            android:fontFamily="@font/font_regular"
            android:hint="@string/signup_confirm_pass"
            android:inputType="textPassword"
            android:textColor="@color/black"
            tools:ignore="SpeakableTextPresentCheck" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addressLayoutId"
        android:layout_marginHorizontal="15dp"
        style="@style/Widget.Design.TextInputLayout"
        app:boxStrokeColor="@color/teal_700"
        android:layout_below="@id/conPassLayoutId">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/addressEditTextId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="postalAddress"
            android:fontFamily="@font/font_regular"
            android:hint="@string/signup_address"
            android:inputType="textPostalAddress"
            android:textColor="@color/black"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="20dp"
        android:background="@color/teal_700"
        android:fontFamily="@font/font_regular"
        android:text="@string/btn_signup"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:elevation="10dp"
        android:layout_below="@id/addressLayoutId"
        tools:ignore="TextContrastCheck" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/display_txt2"
        android:text="@string/signup_alreadyhaveacc"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/font_regular"
        android:layout_below="@id/btn_signup" />
    <Button
        android:id="@+id/btn_signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/white"
        android:text="@string/btn_signin"
        android:textSize="15sp"
        android:textColor="@color/teal_700"
        android:fontFamily="@font/font_regular"
        android:layout_below="@id/display_txt2"
        tools:ignore="TouchTargetSizeCheck" />
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressbar1"
        android:layout_centerInParent="true"
        android:elevation="10dp"
        android:visibility="gone"/>

</RelativeLayout>